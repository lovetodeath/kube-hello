<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">

  <display-name>Hello Application</display-name>

  <servlet>
    <servlet-name>HelloServlet</servlet-name>
    <servlet-class>com.yidigun.hello.HelloServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>InfiniteServlet</servlet-name>
    <servlet-class>com.yidigun.hello.InfiniteServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UptimeServlet</servlet-name>
    <servlet-class>com.yidigun.hello.UptimeServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>InfiniteServlet</servlet-name>
    <url-pattern>/infinite</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>HelloServlet</servlet-name>
    <url-pattern>/hello</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UptimeServlet</servlet-name>
    <url-pattern>/uptime</url-pattern>
  </servlet-mapping>

</web-app>
